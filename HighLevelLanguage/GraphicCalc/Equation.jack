class Equation {
/** Constructs a new equation for graphing */
  field int x, y, b, degree;
  field Boolean xExists, yExists, bExists;
  field String format;
  constructor Equation new(int deg, String form) {
    let xExists = false;
    let yExists = false;
    let bExists = false;
    let degree = deg;
    let format = form;
    return this;
  }

